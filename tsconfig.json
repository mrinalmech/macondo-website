{
    "compilerOptions": {
        "types": [
            "node",
            "jest",
            "@testing-library/jest-dom"
        ],
        "target": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*",
        "./gatsby-node.ts",
        "./gatsby-config.ts",
        "./plugins/**/*"
    ]
}
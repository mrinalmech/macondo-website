{
    "compilerOptions": {
        "baseUrl": "./",
        "types": [
            "node",
            "jest",
            "cypress", 
            "cypress-axe",
            "@testing-library/jest-dom",
            "@testing-library/cypress"
        ],
        "target": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./cypress/**/*",
        "./src/**/*",
        "./util/**/*",
        "./index.d.ts",
        "./cypress-config.ts",
        "./gatsby-config.ts",
        "./tailwind.config.ts"
    ]
}